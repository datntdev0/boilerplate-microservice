<div id="alert_dialog" class="alert-dialog-overlay d-flex align-items-center justify-content-center" hidden="@(!IsVisible)">
  <div class="alert-dialog">
    <div class="modal-content">
      <div class="modal-body text-center p-4">
        @if (Type == AlertDialogType.Success)
        {
          <div class="alert-icon alert-icon-success">
            <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <path d="M8 12l3 3 5-5"></path>
            </svg>
          </div>
        }
        @if (Type == AlertDialogType.Danger)
        {
          <div class="alert-icon alert-icon-error">
            <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <line x1="15" y1="9" x2="9" y2="15"></line>
              <line x1="9" y1="9" x2="15" y2="15"></line>
            </svg>
          </div>
        }
        @if (Type == AlertDialogType.Warning)
        {
          <div class="alert-icon alert-icon-warning">
            <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
              <line x1="12" y1="9" x2="12" y2="13"></line>
              <line x1="12" y1="17" x2="12.01" y2="17"></line>
            </svg>
          </div>
        }
        @if (Type == AlertDialogType.Info)
        {
          <div class="alert-icon alert-icon-info">
            <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <line x1="12" y1="16" x2="12" y2="12"></line>
              <line x1="12" y1="8" x2="12.01" y2="8"></line>
            </svg>
          </div>
        }

        <h2 class="alert-title">@Title</h2>
        <p class="alert-text">@Text</p>
      </div>
      <div class="modal-footer border-0 justify-content-center pb-4">
        <div class="alert-actions">
          @if (!string.IsNullOrEmpty(CancelButtonText))
          {
            <button type="button" class="btn btn-@CancelButtonVariant.ToString().ToLower()" onclick="dismissAlertDialog()">
              @CancelButtonText
            </button>
          }
          @if (!string.IsNullOrEmpty(ConfirmButtonText))
          {
            <button type="button" class="btn btn-@ConfirmButtonVariant.ToString().ToLower()" onclick="dismissAlertDialog()">
              @ConfirmButtonText
            </button>
          }
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function dismissAlertDialog() {
      const alertDialog = document.querySelector('#alert_dialog');
      alertDialog.hidden = true;
  }
</script>
